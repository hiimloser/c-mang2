#include <stdio.h>

int main()
{
    int a[200][200];
    int m,n;
    int max=a[0][0];
    double sum=0;

    printf("so dong = ");
    scanf("%d",&m);
    printf("so cot = ");
    scanf("%d",&n);
    printf("nhap mang \n");

    for(int i=1;i<=m;i++){
        for(int j=1;j<=n;j++){
        	printf(" a[%d,%d] = ",i,j);
        	scanf("%d",&a[i][j]);
        }
    }
    
    printf("==================\n");
    printf("mang da nhap \n");
    
    for(int i=1;i<=m;i++){
        for(int j=1;j<=n;j++){
           printf("a[%d,%d]= %d\n",i,j,a[i][j]);
        }
    }
    for(int i=1;i<=m;i++){
        for(int j=1;j<=n;j++){
            sum+=a[i][j];
           
        }
    }
    
    printf("tong = %f",sum);
    printf("trung binh cong = %f",sum/(m*n));
	
	
	  // tim gia tri lon nhat cua hang cuoi
	
	  printf("\n");
	
	  int tong=0;
	  for(int i=1;i<=m;i++) {
		  for(int j=1;j<=n;j++) {
			  if (i == m && max < a[i][j]) {
			      max=a[i][j];
				
			  }
		  }
	  }
	
	  printf("max = %d",max);
    printf("k = ");
    scanf("%d",&k);
    
    for(int i=1;i<=m;i++){
        for(int j=1;j<=n;j++){
            if(0<k<=m&&i==k){
               tb=tb*a[k][j]; 
            }
        }
    }
    
    printf("tich = %d",tb);
   return 0;
}
